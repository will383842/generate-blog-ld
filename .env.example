APP_NAME="Generate Blog LD"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Paris
APP_URL=http://localhost:8000

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de données
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=generate_blog_ld
DB_USERNAME=root
DB_PASSWORD=

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Queue (database pour Windows, redis pour Linux)
QUEUE_CONNECTION=database

# Cache
CACHE_STORE=redis
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Redis
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (optionnel)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ===========================================
# CONTENT ENGINE CONFIG
# ===========================================

# Génération de contenu
CONTENT_DAILY_ARTICLES=100
CONTENT_DAILY_LANDINGS=100
CONTENT_MIN_WORDS=1500
CONTENT_MAX_WORDS=2500
CONTENT_FAQS_COUNT=5
CONTENT_INTERNAL_LINKS=3
CONTENT_EXTERNAL_LINKS=2
CONTENT_MIN_QUALITY_SCORE=70

# Modèles IA
GPT_MODEL_CONTENT=gpt-4o
GPT_MODEL_TRANSLATION=gpt-4o-mini
GPT_MODEL_META=gpt-4o-mini
DALLE_MODEL=dall-e-3
DALLE_SIZE=1792x1024
DALLE_QUALITY=standard

# Clés API
OPENAI_API_KEY=
PERPLEXITY_API_KEY=

# Limites de coûts
COSTS_DAILY_LIMIT=100
COSTS_MONTHLY_LIMIT=2500

# Cache TTL
CACHE_SOURCES_TTL=604800
CACHE_TRANSLATIONS_TTL=2592000

# ===========================================
# PLATEFORMES
# ===========================================

# SOS-Expat
PLATFORM_SOS_EXPAT_URL=https://sos-expat.com
PLATFORM_SOS_EXPAT_API_URL=https://api.sos-expat.com
PLATFORM_SOS_EXPAT_API_KEY=
PLATFORM_SOS_EXPAT_WEBHOOK_SECRET=
PLATFORM_SOS_EXPAT_ENABLED=true

# Ulixai
PLATFORM_ULIXAI_URL=https://ulixai.com
PLATFORM_ULIXAI_API_URL=https://api.ulixai.com
PLATFORM_ULIXAI_API_KEY=
PLATFORM_ULIXAI_WEBHOOK_SECRET=
PLATFORM_ULIXAI_ENABLED=true

# Ulysse.AI
PLATFORM_ULYSSE_URL=https://ulysse.ai
PLATFORM_ULYSSE_API_URL=https://api.ulysse.ai
PLATFORM_ULYSSE_API_KEY=
PLATFORM_ULYSSE_WEBHOOK_SECRET=
PLATFORM_ULYSSE_ENABLED=false

# ===========================================
# INDEXATION
# ===========================================

GOOGLE_INDEXING_ENABLED=false
GOOGLE_APPLICATION_CREDENTIALS=

INDEXNOW_KEY=
INDEXNOW_ENABLED=false