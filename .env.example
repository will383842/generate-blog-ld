APP_NAME="Generate Blog LD"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Paris
APP_URL=http://localhost:8000

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# DATABASE
# ===========================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=generate_blog_ld
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ===========================================
# REDIS, CACHE & SESSIONS
# ===========================================

REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

CACHE_STORE=redis
CACHE_PREFIX=

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ===========================================
# QUEUE & BROADCASTING
# ===========================================

QUEUE_CONNECTION=database
BROADCAST_CONNECTION=log

# ===========================================
# FILESYSTEM & STORAGE
# ===========================================

FILESYSTEM_DISK=local

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ===========================================
# MAIL
# ===========================================

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# MEMCACHED (si utilisé)
# ===========================================

MEMCACHED_HOST=127.0.0.1

# ===========================================
# VITE
# ===========================================

VITE_APP_NAME="${APP_NAME}"

# ===========================================
# CONTENT ENGINE CONFIG
# ===========================================

# Génération de contenu
CONTENT_DAILY_ARTICLES=100
CONTENT_DAILY_LANDINGS=100
CONTENT_MIN_WORDS=1500
CONTENT_MAX_WORDS=2500
CONTENT_FAQS_COUNT=5
CONTENT_INTERNAL_LINKS=3
CONTENT_EXTERNAL_LINKS=2
CONTENT_MIN_QUALITY_SCORE=70

# Auto-actions
CONTENT_AUTO_TRANSLATE=false
CONTENT_AUTO_GENERATE_IMAGE=false

# Cache TTL
CACHE_SOURCES_TTL=604800
CACHE_TRANSLATIONS_TTL=2592000

# ===========================================
# MODÈLES IA
# ===========================================

GPT_MODEL_CONTENT=gpt-4o
GPT_MODEL_TRANSLATION=gpt-4o-mini
GPT_MODEL_META=gpt-4o-mini
DALLE_MODEL=dall-e-3
DALLE_SIZE=1792x1024
DALLE_QUALITY=standard

# ===========================================
# CLÉS API - Services IA
# ===========================================

OPENAI_API_KEY=
PERPLEXITY_API_KEY=

# DALL-E utilise la même clé qu'OpenAI
DALLE_API_KEY=${OPENAI_API_KEY}

# ===========================================
# LIMITES DE COÛTS
# ===========================================

COSTS_DAILY_LIMIT=100
COSTS_MONTHLY_LIMIT=2500

# Budgets alternatifs (si tu utilises AI_DAILY_BUDGET dans ton code)
